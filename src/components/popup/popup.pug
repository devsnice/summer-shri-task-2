include ../icon/icon.pug
include ../termostat/termostat.pug
include ../range/range.pug

// Common layout for popups
.popup-layout#popup-layout

// Termostat controller popup layout
.popup#popup-card-termostat
  .popup-body
    header.popup-header
      .popup-header__info
        h3.popup-header__title Xiaomi Warm Floor
        p.popup-header__desc Включено

      .popup-header__extra
        .popup-header__temperature
          span +23
        .popup-header__icon
          +icon("temperature_active", 40)
    
    div.popup-content
      +termostat()

  footer.popup-footer
    button.button.button_type-yellow Применить
    button.button.button_type-white.popup-close Закрыть

// Temperature controller popup layout
.popup#popup-controller-temperature
  .popup-body
    header.popup-header
      .popup-header__info
        h3.popup-header__title Elgato Eve Degree Connected
        p.popup-header__desc Включено
        .popup-header__filter
          +filters("filters_type-with-scroll", ['Вручную', 'Холодно', 'Тепло', 'Жарко'])

      .popup-header__extra
        .popup-header__temperature
          span +23
        .popup-header__icon
          +icon("temperature_active", 40)
    
    div.popup-content
      +range("temperature")

  footer.popup-footer
    button.button.button_type-yellow Применить
    button.button.button_type-white.popup-close Закрыть

// Light controller popup layout
.popup#popup-controller-light
  .popup-body
    header.popup-header
      .popup-header__info
        h3.popup-header__title Elgato Eve Degree Connected
        p.popup-header__desc Включено
        .popup-header__filter
          +filters("filters_type-with-scroll", ['Вручную', 'Дневной свет', 'Вечерний свет', 'Рассвет'])

      .popup-header__extra
        .popup-header__icon
          +icon("sun_active", 40)
    
    div.popup-content
      +range("light")

  footer.popup-footer
    button.button.button_type-yellow Применить
    button.button.button_type-white.popup-close Закрыть